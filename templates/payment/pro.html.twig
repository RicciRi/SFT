{% extends 'base.html.twig' %}


{% block title %}{{ parent() }} - Payment{% endblock %}

{% block navigation %} {% endblock %}
{% block navigationMenu %} {% endblock %}

{% block body %}
    <div class="payment-container">
        <div class="payment-header">
            <a href="{{ path('app_home') }}" class="back-button">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 12H5" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                          stroke-linejoin="round"/>
                    <path d="M12 19L5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                          stroke-linejoin="round"/>
                </svg>
            </a>
            <div class="brand">
                <img src="{{ asset('images/fly.svg') }}" alt="Mastercard">

                <span>filetransfer</span>
            </div>
        </div>

        <div class="payment-content">
            <div class="payment-info">
                <h2 class="payment-title">Subscribe to Pro plan</h2>
                <div class="payment-price">
                    <span class="amount">US$10.00</span>
                    <span class="period">per month</span>
                </div>

                <div class="payment-details">
                    <div class="payment-item">
                        <div class="item-description">
                            <span class="item-name">Pro plan</span>
                            <div class="item-details">
                                <span>Platform Fee</span>
                                <span>Billed monthly</span>
                            </div>
                        </div>
                        <span class="item-price">$10.00</span>
                    </div>

                    <div class="separator"></div>


                    <div class="payment-item">
                        <div class="tax-info">
                            <span>Tax</span>
                            <span class="info-icon">
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <circle cx="8" cy="8" r="7.5" stroke="currentColor"/>
                                <path d="M8 4V8.5" stroke="currentColor" stroke-linecap="round"/>
                                <circle cx="8" cy="11" r="1" fill="currentColor"/>
                            </svg>
                        </span>
                        </div>
                        <span class="item-price">$0.00</span>
                    </div>

                    <div class="payment-item total">
                        <span class="item-name">Total due today</span>
                        <span class="item-price">$10.00</span>
                    </div>
                </div>
            </div>

            <div class="payment-form">
                <h2 class="form-title">Pay with card</h2>

                <form>
                    <div class="form-group">
                        <label for="card">Card information</label>
                        <input type="text" id="card" name="card" placeholder="1234 1234 1234 1234">
                        <div class="card-details">
                            <input type="text" id="expiry" name="expiry" placeholder="MM / YY">
                            <input type="text" id="cvc" name="cvc" placeholder="CVC">
                            <div class="card-icons">
                                <img src="{{ asset('images/visa.svg') }}" alt="Visa">
                                <img src="{{ asset('images/mastercard.svg') }}" alt="Mastercard">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name">Cardholder name</label>
                        <input type="text" id="name" name="name" placeholder="Full name on card">
                    </div>

                    <div class="form-group">
                        <label for="country">Country or region</label>
                        <div class="select-wrapper">
                            <select id="country" name="country">
                                <option value="poland">Poland</option>
                                <option value="usa">United States</option>
                                <option value="canada">Canada</option>
                                <option value="uk">United Kingdom</option>
                            </select>
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                      stroke-linejoin="round"/>
                            </svg>
                        </div>
                    </div>

                    <a href="{{ path('api_create_pro') }}" class="submit-button">Pay and subscribe</a>

                    <p class="terms">
                        By confirming your subscription, you allow Evervault to charge you for future payments in
                        accordance with their terms. You can always cancel your subscription.
                    </p>

                    <div class="footer">
                        <a href="#">Terms</a>
                        <a href="#">Privacy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}